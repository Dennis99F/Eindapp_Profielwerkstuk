<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/profielwerkstuk_achtergrond">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Vakantiebestemmingen Oceanië"
            android:textColor="@color/colorTextButtons"
            android:textAlignment="center"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/DisplayO1"
            android:layout_width="175dp"
            android:layout_height="58dp"
            android:textColor="@color/colorTextButtons"
            android:background="@drawable/border_style_background"
            android:onClick="onButtonClickO1"
            android:text="Australië" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/DisplayO2"
            android:layout_width="175dp"
            android:layout_height="58dp"
            android:layout_marginTop="-68dp"
            android:layout_marginLeft="180dp"
            android:textColor="@color/colorTextButtons"
            android:background="@drawable/border_style_background"
            android:onClick="onButtonClickO2"
            android:text="Nieuw-Zeeland" />

    </LinearLayout>
</ScrollView>
