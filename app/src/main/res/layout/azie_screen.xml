<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/profielwerkstuk_achtergrond">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Vakantiebestemmingen Azië"
                android:textColor="@color/colorTextButtons"
                android:textAlignment="center"
                android:textSize="28dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/DisplayAA1"
                android:layout_width="175dp"
                android:layout_height="58dp"
                android:background="@drawable/border_style"
                android:textColor="@color/colorTextButtons"
                android:onClick="onButtonClickAA1"
                android:text="China" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/DisplayAA2"
                android:layout_width="175dp"
                android:layout_height="58dp"
                android:layout_marginTop="-68dp"
                android:layout_marginLeft="180dp"
                android:background="@drawable/border_style"
                android:textColor="@color/colorTextButtons"
                android:onClick="onButtonClickAA2"
                android:text="Indonesië" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/DisplayAA3"
                android:layout_width="175dp"
                android:layout_height="58dp"
                android:background="@drawable/border_style"
                android:textColor="@color/colorTextButtons"
                android:onClick="onButtonClickAA3"
                android:text="Japan" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/DisplayAA4"
                android:layout_width="175dp"
                android:layout_height="58dp"
                android:layout_marginTop="-68dp"
                android:layout_marginLeft="180dp"
                android:background="@drawable/border_style"
                android:textColor="@color/colorTextButtons"
                android:onClick="onButtonClickAA4"
                android:text="Thailand"/>
    </LinearLayout>
</ScrollView>
