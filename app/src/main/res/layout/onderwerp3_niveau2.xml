<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/activity_quiz"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/profielwerkstuk_achtergrond">

    <TextView android:id="@+id/question8"
        android:layout_height="65dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorTextButtons"
        android:padding="4dp"
        android:textSize="20sp"
        android:text="Question to answer"/>
    <Button android:id="@+id/choice29"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:text="A"
        android:onClick="onClick8"
        android:textColor="#fff"
        android:background="@android:color/holo_blue_light"/>
    <Button android:id="@+id/choice30"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:text="B"
        android:onClick="onClick8"
        android:textColor="#fff"
        android:background="@android:color/holo_blue_light"/>
    <Button android:id="@+id/choice31"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:text="C"
        android:onClick="onClick8"
        android:textColor="#fff"
        android:background="@android:color/holo_blue_light"/>
    <Button android:id="@+id/choice32"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:text="D"
        android:onClick="onClick8"
        android:textColor="#fff"
        android:background="@android:color/holo_blue_light"/>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:padding="2dp">
        <TextView android:id="@+id/score8_text"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:textColor="@color/colorTextButtons"
            android:text="Huidige score"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"/>
        <TextView android:id="@+id/score8"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:textColor="@color/colorTextButtons"
            android:text="0/0"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="245dp"
            android:layout_marginLeft="240dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</LinearLayout>

