<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/profielwerkstuk_achtergrond">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Onderwerp 3: Inwoners"
            android:textColor="@color/colorTextButtons"
            android:textSize="25dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@mipmap/inwoners"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="150dp"
                android:layout_height="58dp"
                android:background="@drawable/border_style_background"
                android:textColor="@color/colorTextButtons"
                android:layout_marginTop="10dp"
                android:text="Niveau 1"
                android:id="@+id/Onderwerp3_Hoofdsteden_Niveau1"
                android:onClick="onButtonClickO3HN1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextButtons"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:layout_marginLeft="152dp"
                android:id="@+id/textScore7"
                android:text="0"/>

            <TextView
                android:id="@+id/txtHighScore7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextButtons"
                android:layout_marginLeft="152dp"
                android:layout_marginTop="40dp"
                android:text="0"
                android:textSize="20dp" />
            <Button
                android:layout_width="150dp"
                android:layout_height="58dp"
                android:textColor="@color/colorTextButtons"
                android:background="@drawable/border_style_background"
                android:layout_marginTop="72dp"
                android:text="Niveau 2"
                android:id="@+id/Onderwerp3_Hoofdsteden_Niveau2"
                android:onClick="onButtonClickO3HN2"/>

            <TextView
                android:id="@+id/textScore8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextButtons"
                android:layout_marginLeft="152dp"
                android:layout_marginTop="77dp"
                android:text="0"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtHighScore8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextButtons"
                android:layout_marginLeft="152dp"
                android:layout_marginTop="102dp"
                android:text="0"
                android:textSize="20dp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
