<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/profielwerkstuk_achtergrond">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Vakantiebestemmingen Afrika"
            android:textColor="@color/colorTextButtons"
            android:textAlignment="center"
            android:textSize="24dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/DisplayA1"
            android:layout_width="175dp"
            android:layout_height="58dp"
            android:background="@drawable/border_style_background"
            android:onClick="onButtonClickA1"
            android:textColor="@color/colorTextButtons"
            android:text="Egypte" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/DisplayA2"
            android:layout_width="175dp"
            android:layout_height="58dp"
            android:layout_marginTop="-68dp"
            android:layout_marginLeft="180dp"
            android:onClick="onButtonClickA2"
            android:background="@drawable/border_style"
            android:textColor="@color/colorTextButtons"
            android:text="Marokko" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/DisplayA3"
            android:layout_width="175dp"
            android:layout_height="58dp"
            android:background="@drawable/border_style"
            android:onClick="onButtonClickA3"
            android:textColor="@color/colorTextButtons"
            android:text="Tanzania" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/DisplayA4"
            android:layout_width="175dp"
            android:layout_height="58dp"
            android:layout_marginTop="-68dp"
            android:layout_marginLeft="180dp"
            android:background="@drawable/border_style"
            android:onClick="onButtonClickA4"
            android:textColor="@color/colorTextButtons"
            android:text="Zuid-Afrika" />

    </LinearLayout>
</ScrollView>
